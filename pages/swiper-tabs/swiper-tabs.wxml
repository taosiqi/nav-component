<view class="swiper-tabs">
    <view class="swiper-tab">
        <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">课程介绍</view>
        <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">课程目录</view>
        <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">常见问题</view>
    </view>
    <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab" style="height:{{height}}rpx">
        <swiper-item>
            <view>
                课程介绍
            </view>
        </swiper-item>
        <swiper-item>
            <view>
                课程目录
            </view>
        </swiper-item>
        <swiper-item>
            <view>
                常见问题
            </view>
        </swiper-item>
    </swiper>

</view>